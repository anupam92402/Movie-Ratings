<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.batofgotham.moviereviews.ui.bottomsheetnav.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_choiceChipsFragment"
            app:destination="@id/choiceChipsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailScreenFragment"
            app:destination="@id/detailScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.batofgotham.moviereviews.ui.bottomsheetnav.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.batofgotham.moviereviews.ui.bottomsheetnav.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <dialog
        android:id="@+id/choiceChipsFragment"
        android:name="com.batofgotham.moviereviews.ui.ChoiceChipsFragment"
        android:label="fragment_choice_chips"
        tools:layout="@layout/fragment_choice_chips" />
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.batofgotham.moviereviews.ui.movie.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" />
    <fragment
        android:id="@+id/tvFragment"
        android:name="com.batofgotham.moviereviews.ui.tvshow.TvFragment"
        android:label="fragment_tv"
        tools:layout="@layout/fragment_tv" />
    <fragment
        android:id="@+id/detailScreenFragment"
        android:name="com.batofgotham.moviereviews.ui.detail.DetailScreenFragment"
        android:label="fragment_detail_screen"
        tools:layout="@layout/fragment_detail_screen" />
</navigation>